{
  "name": "plugin-node-schedule",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "plugin/node-schedule/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/plugin/node-schedule",
        "main": "plugin/node-schedule/src/index.ts",
        "tsConfig": "plugin/node-schedule/tsconfig.lib.json",
        "assets": [
          "plugin/node-schedule/*.md",
          {
            "input": "./plugin/node-schedule/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./plugin/node-schedule/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./plugin/node-schedule",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./plugin/node-schedule",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs plugin-node-schedule {args.ver} {args.tag}",
      "dependsOn": ["build"]
    }
  },
  "tags": []
}
