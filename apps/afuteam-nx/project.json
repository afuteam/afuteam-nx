{
  "name": "afuteam-nx",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/afuteam-nx/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/afuteam-nx",
        "format": ["cjs"],
        "bundle": false,
        "main": "apps/afuteam-nx/src/main.ts",
        "tsConfig": "apps/afuteam-nx/tsconfig.app.json",
        "assets": ["apps/afuteam-nx/src/assets"],
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "afuteam-nx:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "afuteam-nx:build:development"
        },
        "production": {
          "buildTarget": "afuteam-nx:build:production"
        }
      }
    },

    "my-echo": {
      "executor": "@afuteam-nx/my-plugin:run",
      "options": {
        "log": "Hello my echo eyea"
      }
    },

    "fetch-repos": {
      "executor": "@afuteam-nx/plugin-fetch-repos:run",
      "options": {
        "repos": ["https://github.com/nrwl/nx.git"]
      }
    },

    "node-schedule": {
      "executor": "@afuteam-nx/plugin-node-schedule:run",
      "options": {
        "note": "基于node-schedule 的定时任务"
      }
    },

    "exec-eslint": {
      "executor": "@afuteam-nx/plugin-exec-eslint:run",
      // TODO 暂时关掉 调试lint的代码
      // "dependsOn": ["fetch-repos"],
      "options": {
        "note": "exec-eslint 需要在 fetch-repos 之后执行"
      }
    }
  },
  "tags": []
}
